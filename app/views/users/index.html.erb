<!--ユーザー一覧-->
<h1>User info</h1>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :book_name %>
  <h4>Opinion</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Users</h1>
<% @books.each do |book| %>
<div>
  <p>image：<%= image_tag('sample-author1.jpg') %></p>
  <p>name：<%= book.user.name %></p>

</div>
<% end %>