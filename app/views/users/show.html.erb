<!--ユーザーの詳細ページ-->

<h1>User info</h1>
<div class="profile-contsiner">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>


    <% if @user.id == current_user.id %>

  <% end %>
</div>



<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :book_name %>
  <h4>Opinion</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
<% @books.each do |book| %>
<div>
  <p><%= image_tag('sample-author1.jpg') %></p>
  <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>Title：<%= book.book_name %></p>
  <p>Opinion：<%= book.caption %></p>

</div>
<% end %>
